<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" loadImage="GetImage" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab idMso="TabMail">
        <group id="githubGroup" label="GitHub">
          <button id="createTask" 
                  label="Create on Github" 
                  screentip="Create on Github"
                  size="large"
                  showImage="true"
                  getImage="GetImage"
                  onAction="CreateIssue" 
                  getEnabled="MailItemSelected" />
          <button id="settings" label="Settings" onAction="ShowSettings" />
          <button id="about" label="About" onAction="ShowAbout" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>